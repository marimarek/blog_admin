<% if @session_manager.signed_in? %>
    <h1>Jestes juz zalogowany.</h1>
<% else %>
    <h1>Logowanie</h1>

	<div class="row">
	  <div class="span4 offset4">
		<%= form_for(:session, url: sessions_path) do |f| %>

		  <%= f.label :Nazwa %>
		  <%= f.text_field :name %>

		  <%= f.label :Haslo %>
		  <%= f.password_field :password %>

		  <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
	  </div>
	</div>
<% end %>